<odoo>
	<template id="report_stock">
		<t t-call="web.html_container">
			<t t-call="web.external_layout">
				<t>
					<div class="page">
						<table class="table table-condensed" >
			                <thead>
			                  <tr>
			                    <!--<th style="width:10%;text-align:left;">Código</th>-->
			                    <th>Imagen</th>
			                    <th>Nombre</th>
			                    <th>Descripción</th>
			                    <th>C. CDMX</th>
			                    <th>C. GDL</th>
			                    <th>C. MER</th>
			                    <th>ENAU</th>
			                    <th>EOC</th>
			                    <th>EMER</th>
			                  </tr>
			                </thead>
			                <tbody class="invoice_tbody">
			                <t t-foreach="docs" t-as="o">
			                  <tr t-if="o.stock_cdmx >= 1 or 
			                  			o.stock_mer >= 1 or 
			                  			o.stock_gdl >= 1 or 
			                  			o.stock_enau  >= 1 or 
			                  			o.stock_eoc  >= 1 or
			                  			o.stock_emer  >= 1">
			                    <td>
			                    	<span>
			                    		<t t-if="o.image_small">
			                    			<img t-attf-src="data:image/*;base64,{{o.image_small}}"/>
			                    		</t>
			                    		<t t-else="">
			                    			<span>Sin imagen</span>
			                    		</t>
			                    	</span>
			                    </td>
			                    <td>
			                      <span t-field="o.name"/>
			                    </td>
			                  	<td>
									<span t-field="o.name"/>
									<t t-if="o.default_code">
										<span>,</span>
									</t>
									<span t-field="o.default_code"/>
									<t t-if="o.x_studio_medidas">
										<span>,</span>
									</t>
									<span t-field="o.x_studio_medidas"/>
									<t t-if="o.description">
										<span>,</span>
									</t>
									<span t-field="o.description"/>
			                  	</td>
			                  	<td>
									<span t-field="o.stock_cdmx"/>
			                  	</td>
			                  	<td>
									<span t-field="o.stock_gdl"/>
			                  	</td>
			                  	<td>
									<span t-field="o.stock_mer"/>
			                  	</td>
			                  	<td>
									<span t-field="o.stock_enau"/>
			                  	</td>
			                  	<td>
									<span t-field="o.stock_eoc"/>
			                  	</td>
			                  	<td>
									<span t-field="o.stock_emer"/>
			                  	</td>
			                  </tr>
			                 </t> 
			                </tbody>
			              </table>
					</div>
				</t>
			</t>
		</t>
	</template>

</odoo>